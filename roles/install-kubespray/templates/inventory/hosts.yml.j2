
# Resource
#   https://github.com/kubernetes-incubator/kubespray/blob/master/inventory/sample/hosts.ini
#
# Mimicks result of contrib/inventory_builder/inventory.py from https://github.com/kubernetes-sigs/kubespray
# But preserves groups defined in the "outer" Ansible job

all:
  hosts:
{% for host in groups['k8s-cluster'] %}
    {{ host }}
      ansible_host: {{ hostvars[host]['ansible_default_ipv4']['address'] }}
      ip: {{ hostvars[host]['ansible_default_ipv4']['address'] }}
      access_ip: {{ hostvars[host]['ansible_default_ipv4']['address'] }}
{% endfor %}
  children:
    kube-master:
      hosts:    
{% for host in groups['kube-master'] %}
        {{ host }}:
{% endfor %}
    kube-node:
      hosts:    
{% for host in groups['all'] %}
        {{ host }}:
{% endfor %}
    etcd:
      hosts:
{% for host in groups['etcd'] %}
        {{ host }}:
{% endfor %}
    k8s-cluster:
      children:
        kube-master:
        kube-node:
